{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@wavefunc/common/*": ["packages/common/src/*"],
      "@wavefunc/common": ["packages/common/src"],
      "@wavefunc/db/*": ["packages/db/src/*"],
      "@wavefunc/db": ["packages/db/src"]
    }
  }
}
